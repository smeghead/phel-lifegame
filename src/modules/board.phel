(ns lifegame\modules\board)

(defstruct Board [matrix])

(defn- create-matrix [width height]
  (loop [matrix []
         n width]
    (if (= n 0)
      matrix
      (recur (push matrix (values (php/array_fill 0 height 0))) (dec n)))))

(defn create [width height]
  (let [matrix (create-matrix width height)]
    (Board matrix)))
